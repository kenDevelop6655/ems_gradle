<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <classPathEntry location="/Program Files/IBM/SQLLIB/java/db2java.zip" />

    <context id="DB2Tables" targetRuntime="MyBatis3">
        <jdbcConnection driverClass="org.postgresql.Driver"
                        connectionURL="jdbc:postgresql://localhost:5432/ems_auto"
                        userId="postgres"
                        password="pass">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.example.ems_gradle.domain.mbgModel" targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="com.example.ems_gradle.infra.mbgMapper"  targetProject="src/main/resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.example.ems_gradle.infra.mbgMapper"  targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <table schema="ems" tableName="cancel">
            <generatedKey column="request_activity_id" sqlStatement="JDBC"/>
        </table>
        <table schema="ems" tableName="confirm">
            <generatedKey column="confirm_id" sqlStatement="JDBC"/>
        </table>
        <table schema="ems" tableName="delete">
            <generatedKey column="delete_id" sqlStatement="JDBC"/>
        </table>
        <table schema="ems" tableName="division_user">
            <generatedKey column="emp_id" sqlStatement="JDBC"/>
        </table>
        <table schema="ems" tableName="edit">
            <generatedKey column="edit_id" sqlStatement="JDBC"/>
        </table>
        <table schema="ems" tableName="equip">
            <generatedKey column="equip_id" sqlStatement="JDBC"/>
        </table>
        <table schema="ems" tableName="first_approve">
            <generatedKey column="request_activity_id" sqlStatement="JDBC"/>
        </table>
        <table schema="ems" tableName="receive">
            <generatedKey column="request_activity_id" sqlStatement="JDBC"/>
        </table>
        <table schema="ems" tableName="request">
            <generatedKey column="request_id" sqlStatement="JDBC"/>
        </table>
        <table schema="ems" tableName="second_approve">
            <generatedKey column="request_activity_id" sqlStatement="JDBC"/>
        </table>
        <table schema="ems" tableName="section_user">
            <generatedKey column="emp_id" sqlStatement="JDBC"/>
        </table>
    </context>
</generatorConfiguration>